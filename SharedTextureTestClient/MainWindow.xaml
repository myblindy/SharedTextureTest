<Window x:Class="SharedTextureTestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:SharedTextureTestClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Image">
            <Image x:Name="SharedTextureImage">
                <Image.Source>
                    <local:D3D11Image x:Name="d3dImage" />
                </Image.Source>
            </Image>
        </GroupBox>

        <GroupBox Grid.Column="1" Header="Controls" Margin="20,0,0,0">
            <StackPanel Margin="5">
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
